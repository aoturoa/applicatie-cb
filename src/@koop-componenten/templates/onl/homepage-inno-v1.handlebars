{{ render "@header" header merge=true }}
<div class="row row--page-opener">
  <div class="container">
    {{ render "@breadcrumb" breadcrumb merge=true }}
  </div>
</div>

<div class="container" role="main" id="content">
  <div class="row row--spacer">

    {{#> @jumbotron jumbotronContext }}
 
        <form class="form form__row form__row--medium">
          <fieldset>
            <legend class="visually-hidden">Doorzoek de overheidsdocumenten</legend>
            <div class="form__row form__row--medium">
              {{render "@input-text" inputSearchContext }}
            </div>
            <div class="form__rowsubmit">
              <div class="form__rowsubmit__item">
                {{ render "@button--primary" btnSubmit merge=true }}
              </div>
            </div>
          </fieldset>
        </form>

    {{/@jumbotron}}

  </div>
  <div class="row">

    {{!-- <h2 class="row__heading">Zoek documenten op thema</h2> --}}
    
    <div class="row row--large">
      <div class="columns columns--dominant">
        <div class="column">
          {{render "@block" blockIntro }}
        </div>
        {{#> @block blockBurger }}
          {{ render "@list--linklist" listBurger merge=true }}
        {{/@block}}
      </div>
    </div>

  </div>

  <div class="row">

    <h2 class="row__heading">Ga snel naar</h2>

    <div class="columns">
      <div class="column">
        <h3>Dienstverlening</h3>
        <p>
          Verschillende diensten van Overheid.nl op basis van overheidsinformatie.
        </p>
        {{ render "@list--linklist" listDienstverlening merge=true }}
      </div>
      <div class="column">
        <h3>Publicaties</h3>
        <p>
          OfficiÃ«le publicaties van de overheid.
        </p>
        {{ render "@list--linklist" listPublicaties merge=true }}
      </div>
      <div class="column">
        <h3>Wet- en regelgeving</h3>
        <p>
          Alle wet- en regelgeving geldend op lokaal of nationaal niveau. 
        </p>
        {{ render "@list--linklist" listWER merge=true }}
      </div>
    </div>
  
  </div>

</div>

{{ render "@footer" }}
