<div class="block-search {{#if modifier}}{{modifier}}{{/if}}">
  {{#> @partial-block}}
    <form>
      <fieldset>
        <legend class="visually-hidden">Opnieuw zoeken:</legend>
        <div class="columns">
          <div class="column column-d-5">
            <div class="form__row">
              {{ render "@input-text" blocksearchInput }}
            </div>
          </div>
          <div class="column column-d-4">
            <div class="form__row">
              {{#if isRegularSelect}}
                {{ render "@select-custom" regularSelect }}
              {{else}}
                {{ render "@select-multi" multiSelectDocumentsoort }}
              {{/if}}
            </div>
          </div>
          <div class="column column-d-3">
            <div class="form__row">
              {{ render "@button" blocksearchSubmit merge=true }}
            </div>
          </div>
        </div>
      </fieldset>
    </form>
    {{#if hasSelectedFilterbar}}
      {{ render "@selectedfilterbar" selectedFilters merge=true }}
    {{/if}}
  {{/ @partial-block}}
</div>
