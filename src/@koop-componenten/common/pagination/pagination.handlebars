<div class="pagination">
  <div class="pagination__index">
    <ul>
      {{#each pages}}
        <li class="{{#if currentPage}}active{{/if}}{{#if @first}} prev{{/if}}{{#if @last}} next{{/if}}">{{#if currentPage}}{{page}}{{else}}<a {{#if id}}id="{{id}}"{{/if}} href="{{href}}">{{#if @first}}<span class="">&laquo;</span>{{/if}}{{#if @last}}<span class="">&raquo;</span>{{/if}}{{page}}</a>{{/if}}</li>
      {{/each}}

      {{!-- <li class="prev"><a {{#if id}}id="{{id}}"{{/if}} href="#"><span class="">&laquo;</span></a></li>
      <li><a {{#if id}}id="{{id}}"{{/if}} href="#">{{ previousPage }}</a></li>
      <li class="active">{{ currentPage }}</li>
      <li>...</li>
      <li><a {{#if id}}id="{{id}}"{{/if}} href="#">{{ lastPage }}</a></li>
      <li class="next"><a {{#if id}}id="{{id}}"{{/if}} href="#"><span class="">&raquo;</span></a></li> --}}
    </ul>
  </div>
  {{#if pageFilter}}
  <div class="pagination__filter">
    <div class="form__element">
      <label for="{{filterId}}">{{ filterLabel }}</label>
      <select id="{{filterId}}">
        {{#each filterOptions}}
          <option value="{{this}}">{{this}}</option>
        {{/each}}
      </select>
    </div>
  </div>
  {{/if}}
</div>
